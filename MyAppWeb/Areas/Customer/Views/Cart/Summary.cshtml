    <div class="container">
        <div class="card—header py—3">
            <h5 class="mb-0">Shipping details</h5>
        </div>

        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Summary</span>
                    <span class="badge badge-secondary badge-pill">3</span>
                </h4>

                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        @foreach (var details in Model.ListOfCart)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@details.Product.Name</span>
                                <span>QTY: @details.Count</span>
                                <span>@(((details.Product.Price) * (details.Count)).ToString("c"))</span>
                            </li>
                        }
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <strong>Total Amount</strong>
                                <strong>
                                    <p class="mb-0">(Including GST)</p>
                                </strong>
                            </div>
                            <span><strong>@Model.OrderHeader.OrderTotal</strong></span>
                        </li>
                    </ul>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Make Purchase</button>
                </div>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Billing address</h4>
                <div class="card-body">
                    <form>
                        <!-- 2 column grid layout with text inputs for the first and last names -->
                        <div class="row mb-4">
                            <div class="col">
                                <div class="form-outline md-4">
                                    <input type="text" asp-for="@Model.OrderHeader.Name" id="form7Example1" class="form—control col-12" />
                                    <label class="form-label col-12" for="form7Example1">Name</label>
                                </div>
                            </div>

                            <div class="form-outline md-4">
                                <input type="text" asp-for="@Model.OrderHeader.Phone" id="form7ExampIe2" class="form—control col-12" />
                                <label class="form-label col-12" for="form7Example2">Phone</label>
                            </div>
                            <div class="form-outline md-4">
                                <input type="text" asp-for="@Model.OrderHeader.Address" id="form7ExampIe3" class="form—control col-12" />
                                <label class="form—control col-12" for="form7Example3">Address</label>
                            </div>
                            <div class="form-outline md-4">
                                <input type="text" asp-for="@Model.OrderHeader.City" id="form7ExampIe4" class="form—control col-12" />
                                <label class="form—control col-12" for="form7Example4">City</label>
                            </div>
                            <div class="form-outline md-4">
                                <input type="text" asp-for="@Model.OrderHeader.State" id="form7ExampIe5" class="form—control col-12" />
                                <label class="form—control col-12" for="form7Example5">State</label>
                            </div>
                            <div class="form-outline md-4">
                                <input type="text" asp-for="@Model.OrderHeader.PostalCode" id="form7ExampIe6" class="form—control col-12" />
                                <label class="form—control col-12" for="form7Example6">PostalCode</label>
                            </div>
                        </div>

                        <hr class="mb-4">

                        <div class="form-check d-flex justify-content-center mb-2">
                            <input class="form-check-input me-2" type="checkbox" checked>
                            <label class="form-check-label" asp-area="Customer">Create an account</label>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</form>