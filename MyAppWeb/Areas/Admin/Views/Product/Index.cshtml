@model MyApp.Models.ViewModels.ProductVM;
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Products</h2>

        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i> &nbsp; Create new Product</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" id="myTable" style="width:100%">
    <thead>
        <tr>
            <th>
                Products Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    
</table>
@section scripts{
    <script src="~/js/Product.js"></script>
}